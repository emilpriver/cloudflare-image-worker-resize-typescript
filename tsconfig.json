{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types",
      "@types/jest",
      "@types/service-worker-mock",
      "@types/node"
    ]
  },
  "include": [
    "src",
    "node_modules/@types/node/buffer.d.ts"
  ],
  "exclude": ["node_modules", "dist", "test"]
}
